<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.pwr.ite.client.view.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome in registration system.">
        <font>
            <Font name="Arial bold" size="25"/>
        </font>
    </Label>
    <TextField fx:id="nameTextField">
        <font>
            <Font name="Arial bold" size="15"/>
        </font>
    </TextField>
    <Button fx:id="loginButton" text="Login" onAction="#loginButtonClick">
        <font>
            <Font name="Arial bold" size="15"/>
        </font>
    </Button>
</VBox>
